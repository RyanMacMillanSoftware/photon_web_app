<% provide(:title, 'Edit Time Punch') %>
<% provide(:button_text, 'Save changes') %>
<h1>Edit Time Punch</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @check_in do |f| %> 
    	
  <%= render 'shared/check_in_error_messages', object: @check_in %>
 		

  		<%@users = User.where(activated: true) %>
  		<%= f.label :name %>
      <%= f.collection_select :name, @users.sort { |a,b| a.name.downcase <=> b.name.downcase } , :name, :name %>
      
      <%= f.label :time %>
      <%= f.time_select :time, prompt: {hour: 'Choose hour', minute: 'Choose minute'}, ignore_date: true%>


  		<%= f.submit yield(:button_text), class: "btn btn-primary" %>
		<% end %>
  </div>
</div>