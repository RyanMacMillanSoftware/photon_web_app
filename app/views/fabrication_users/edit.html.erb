<!--just a form for editing the mfusers-->
<% provide(:title, 'Edit Equipment User') %>
<% provide(:button_text, 'Edit') %>
<h1>Edit an Equipment User</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@f_user) do |f| %>
  <%= render 'shared/f_user_error_messages', object: @f_user %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
  </div>
</div>