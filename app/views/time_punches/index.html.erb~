<h1>Retrieve Data</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @selection, method: POST do |f| %>    	
    	<%= f.label :start_date_of_data%>
    	<%= f.datetime_select :from_time, prompt: {year: 'Year', month: 'Month', day: 'Day', 
														hour: 'Hour', minute: 'Minute'}%>
    	<%= f.label :end_date_of_data%>
		<%= f.datetime_select :to_time, prompt: {year: 'Year', month: 'Month', day: 'Day', 
														hour: 'Hour', minute: 'Minute'}%>
	
		
  		<%= f.submit "Download", class: "btn btn-primary" %>
		 <% end %>
  </div>
</div>